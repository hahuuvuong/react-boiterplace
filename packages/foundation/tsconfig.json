{
    "compilerOptions": {
      "outDir": "lib", 
      "module": "esnext", // Specify module code generation
      "target": "esnext",
      "declaration": true, // Generate corresponding .d.ts file
      "moduleResolution": "node", 
    },
    "include": [
      "src" // *** The files TypeScript should type check ***
